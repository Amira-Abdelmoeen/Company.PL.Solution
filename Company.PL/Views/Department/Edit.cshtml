@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Department</h1>
<form asp-action="Edit">
    <div asp-validation-summary="All" class="alert alert-danger"></div>
    <div class="form-group">
        @* <input asp-for="Id" class="form-control" readonly type="hidden" />
        <label asp-for="Code" class="col-form-label"></label> *@
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="DateOfCreation" class="col-form-label"></label>
        <input asp-for="DateOfCreation" class="form-control" />
    </div>
    <br />
    <br />
    <input class="btn btn-primary" type="submit" name="name" value="Save" />
    <a asp-action="Index" class="btn btn-light ms-2">Back To List</a>


</form>

